{
  "include": ["./src", "./tests"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },

  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
    },
    "include": ["tests/**/*"]
  }
}